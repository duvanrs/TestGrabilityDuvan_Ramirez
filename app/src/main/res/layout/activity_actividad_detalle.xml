<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idLinearlayoutImagin"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/LnLtBanner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/imagen_extendida"
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher"
            android:transitionName="@string/nombre_transicion_imagen">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/LnLtBanner">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ResumenApplication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@color/background_footer"
                    android:layout_marginTop="22dp"
                    android:textColor="@android:color/white"
                    android:scrollbars="vertical"
                    android:autoText="false" />
            </LinearLayout>
        </ScrollView>
        </LinearLayout>
</RelativeLayout>
